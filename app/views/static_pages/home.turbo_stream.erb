<%= turbo_stream.append "feed_items" do %>
  <%= render partial: "microposts/micropost", collection: @feed_items %>
<% end %>
<% if @feed_items.next_page %>
  <%= turbo_stream.replace "load_more" do %>
    <%= turbo_frame_tag "load_more", src: static_pages_path(page: @feed_items.next_page, format: :turbo_stream), loading: :lazy %>
  <% end %>
<% end %>
